<h1>Listando Universidades</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.city %></td>
        <td><%= college.state %></td>
        <td class="nowrap">
          <%= link_to '', rails_admin.show_path(model_name: 'college', id: college.id), class: "glyphicon glyphicon-eye-open", title: "Visualizar" %>
          <%= link_to '', rails_admin.edit_path(model_name: 'college', id: college.id), class: "glyphicon glyphicon-edit", title: "Editar" %>
          <%= link_to '', college, title: "Remover", method: :delete, class: "glyphicon glyphicon-trash", data: { confirm: 'Você tem certeza que deseja remover essa universidade?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Universidade', new_college_path, class: "btn btn-primary ico-plus" %>
