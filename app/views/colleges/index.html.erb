<h1>Listando Universidades</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.city %></td>
        <td><%= college.state %></td>
        <td class="nowrap">
          <%= link_to '', college, class: "glyphicon glyphicon-eye-open", title: "Visualizar" %>
          <%= link_to '', edit_college_path(college), class: "glyphicon glyphicon-edit", title: "Editar" %>
          <%= link_to '', college, title: "Remover", method: :delete, class: "glyphicon glyphicon-trash", data: { confirm: 'Você tem certeza' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Universidade', new_college_path, class: "btn btn-primary" %>
