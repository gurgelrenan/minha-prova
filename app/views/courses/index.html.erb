<h1>Listando Cursos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Universidade</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.college.name if course.college %></td>
        <td nowrap>
          <%= link_to "", course_path(course), :class => "glyphicon glyphicon-eye-open", title: "Visualizar"  %>
          <%= link_to "", edit_course_path(course), :class => "glyphicon glyphicon-edit", title: "Editar" %>
          <%= link_to "", course_path(course), title: "Deletar", :method => :delete, :confirm => "Tem certeza que deseja remover esse curso?", :class => "glyphicon glyphicon-trash" %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Curso', new_course_path, class: "btn btn-primary" %>
