<% content_for :head do %>
  <%= javascript_include_tag "questions" %>
<% end %>

<h2>Questões</h2>
<%= search_form_for @q, :class => 'form-inline', html: { role: "form"  } do |f| %>

	<div class="row">
		<div class="col-md-12 well">
			<h4>Pesquisa</h4>

  <div class="form-group">
  	<%= f.label :description_cont, "Descrição" %>
  	<%= f.text_field :description_cont, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :discipline_name_eq, "Nome da disciplina" %>
    <%= f.select :discipline_name_eq, options_from_collection_for_select(Discipline.all, :name, :name), class: "form-control" %>
  </div>
	
	<div class="form-group">
  	<%= f.label :user_name_eq, "Nome do criador" %>
	  <%= f.select :user_name_eq, options_from_collection_for_select(User.all, :name, :name), class: "form-control" %>
  </div>
  
  <div class="form-group">
  	<%= f.label :question_type_name_eq, "Tipo da questão" %>
  	<%= f.select :question_type_name_eq, options_from_collection_for_select(QuestionType.all, :name, :name), class: "form-control" %>
  </div>
	<br />
	<br />		  		  
	<%= f.submit "Pesquisar", :name => nil, :class => "btn btn-info btn-small" %>
		</div>
	</div>
<% end %>


<div class="row">
	<div class="col-md-9 content" role="main">
		<table class="table table-style">
			<thead>
				<tr>
					<th><%= sort_link @q, :description, "Título" %></th>
					<th><%= sort_link @q, :discipline_name, "Disciplina" %></th>
					<th><%= sort_link @q, :user_name, "Autor" %></th>
					<th><%= sort_link @q, :question_type_value, "Tipo" %></th>
					<th>Dificuldade</th>
				</tr>
			</thead>
			<% @questions.each do |q| %>
				<tbody>
					<tr>
							<td><%= link_to q.description, question_path(q) %></td>
							<td><%= q.discipline.name %></td>
							<td><%= q.user.name if !q.user.blank? %></td>
							<td><%= q.question_type.name if !q.question_type.blank? %></td>
							<td><%= q.average if q.level_questions.count > 0 %></td>
					</tr>
				</tbody>
			<% end %>
		</table>
		<%= link_to "Criar questão", rails_admin.new_path('question'), class: "btn btn-primary ico-plus" %>
	</div>
</div>