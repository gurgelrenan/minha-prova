<div class="row">
	<div class="col-md-9 content" role="main">
		<h2>Questões</h2>
		<table class="table table-style">
			<thead>
				<tr>
					<th>Título</th>
					<th>Disciplina</th>
					<th>Autor</th>
					<th>Dificuldade</th>
				</tr>
			</thead>
			<% @questions.each do |q| %>
				<tbody>
					<tr>
							<td><%= link_to q.description, question_path(q) %></td>
							<td><%= q.discipline.name %></td>
							<td><%= q.user.teacher.name %></td>
							<td><%= rating_for q %></td>		
					</tr>
				</tbody>
			<% end %>
		</table>
		<%= link_to "Criar questão", rails_admin.new_path('question'), class: "btn btn-default ico-plus" %>
	</div>
</div>