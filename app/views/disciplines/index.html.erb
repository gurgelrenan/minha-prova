<h1>Listando disciplines</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Universidade</th>
      <th>Professor</th>
      <th>Curso</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td><%= discipline.description %></td>
        <td><%= discipline.college.name %></td>
        <td><%= discipline.teacher.name %></td>
        <td><%= discipline.course.name %></td>
        <td nowrap>
          <%= link_to "", discipline_path(discipline), :class => "glyphicon glyphicon-eye-open", title: "Visualizar"  %>
          <%= link_to "", edit_discipline_path(discipline), :class => "glyphicon glyphicon-edit", title: "Editar" %>
          <%= link_to "", discipline_path(discipline), title: "Deletar", :method => :delete, :confirm => "Tem certeza que deseja remover essa disciplina?", :class => "glyphicon glyphicon-trash" %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discipline', new_discipline_path %>
