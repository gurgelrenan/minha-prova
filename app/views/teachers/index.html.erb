<h1>Listando Professores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email de usuário</th>
      <th>Núcleo</th>
      <th>Curso</th>
      <td>Ações</td>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.user ? teacher.user.email : "Ainda não existe um email cadastrado" %></td>
        <td><%= teacher.core ? teacher.core.name : "Ainda não pertence a nenhum núcleo" %></td>
        <td><%= teacher.course ? teacher.course.name : "Ainda não pertence a nenhum curso" %></td>
        <td nowrap>
        <%= link_to "Editar", edit_teacher_path(teacher), :class => "glyphicon glyphicon-edit" %>
        <%= link_to "Remover", teacher_path(teacher), :method => :delete, :confirm => "Tem certeza que deseja remover esse usuário?", :class => "glyphicon glyphicon-trash" %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo professor', new_teacher_path, class: "btn btn-primary" %>
